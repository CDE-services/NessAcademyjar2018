package shapes;

public class Triangle extends Shape {

	private int size;
	
	public Triangle(int size) {
		super();
		this.size = size;
	}

	public Triangle(int size, int x, int y, char color) {
		super(x, y, color);
		this.size = size;
	}

	@Override
	public void print() {
		super.printOffsetY();
		for(int r = 0; r < size; r++) {
        	super.printOffsetX();
            System.out.print(super.color);
            System.out.println();
        }
	}
	
	public int getSize() {
		return size;
	}
	
	public void setSize(int size) {
		this.size = size;
	}
}
